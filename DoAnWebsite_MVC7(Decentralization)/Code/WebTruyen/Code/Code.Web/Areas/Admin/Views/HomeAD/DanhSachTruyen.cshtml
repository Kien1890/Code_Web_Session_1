
@{
    ViewBag.Title = "DanhSachTruyen";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
    var listAll_AD = (List<Code.Models.Models.MDDanhSachTruyenAD>)ViewBag.ListAll_AD;
    var urlWeb = @Session["URL_WEB"];
}
@using PagedList;
@using PagedList.Mvc;
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">BẢNG QUẢN LÝ DANH SÁCH TRUYỆN</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên truyện</th>
                            <th>Thể loại</th>
                            <th>Tác giả</th>
                            <th>Ngày tạo</th>
                            <th>Số lượng truy cập</th>
                            <th>Ảnh minh họa</th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Tên truyện</th>
                            <th>Thể loại</th>
                            <th>Tác giả</th>
                            <th>Ngày tạo</th>
                            <th>Số lượng truy cập</th>
                            <th>Ảnh minh họa</th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in listAll_AD)
                        {
                        <tr>
                            <td>@item.TenTruyen</td>
                            <td>@item.TenLoai</td>
                            <td>@item.TacGia</td>
                            <td>@item.NgayDang</td>
                            <td>@item.SoLuongTruyCap</td>
                            <td>
                                <img style="display: block; max-width: 230px; max-height: 95px; width: auto; height: auto;" src="@urlWeb@item.LinkAnhBG" class="lazy" data-original="@urlWeb@item.LinkAnhBG" alt="Truyện @item.TenTruyen">
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { area = "Admin", id = item.ID_Truyen }) |
                                @Html.ActionLink("Chapter", "ChapterDetails", new { area = "Admin", id = item.ID_Truyen }) |
                                <a href="@Url.Action("DeleteTruyen", "HomeAD", new { area = "Admin", id = item.ID_Truyen })" onclick="return confirm('Bạn có chắc muốn xóa truyện @item.TenTruyen ?');">Remove</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
