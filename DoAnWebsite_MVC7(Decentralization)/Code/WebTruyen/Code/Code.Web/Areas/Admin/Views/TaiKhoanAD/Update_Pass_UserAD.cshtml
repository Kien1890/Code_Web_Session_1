@model Code.Data.TaiKhoan

@{
    ViewBag.Title = "Update_Pass_UserAD";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}
<div class="container bootstrap snippets bootdey">
    <div class="panel-body inf-content">
        <center><h2 style="margin-top:9px">ĐỔI MẬT KHẨU TÀI KHOẢN</h2></center><br>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID_TaiKhoan)
                <div class="form-group">
                    <p class="control-label col-md-2">Mật khẩu cũ</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Mật khẩu mới</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MatKhau1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2">Nhập lại mật khẩu mới</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MatKhau2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau2, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input style="color:black" type="submit" value="Đổi" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            <a class="nav-link" href="@Url.Action("Login", "Home", new { area = "" })">
                <i class="bi bi-arrow-90deg-left"></i>
                <span>Trở lại</span>
            </a>
        </div>
    </div>
</div>


