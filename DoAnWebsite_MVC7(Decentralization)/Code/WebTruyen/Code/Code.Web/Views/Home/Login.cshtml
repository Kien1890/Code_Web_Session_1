@model Code.Models.Models.MDLogin
@{
    ViewBag.Title = "Login";
}
<link href="~/Assets/css/Login.css" rel="stylesheet" />
<div class="site-content" style="height: auto !important;">
    <div class="container" style="margin-top: 50px; height: auto !important;">
        <div class="row " style="height: auto !important;">
            <div class="main-col col-md-12 col-sm-12">
                <div class="c-blog__heading style-2 font-heading " >
                    <h2 class="h4">
                        <i class="bi bi-person-circle"></i>
                        Đăng nhập
                    </h2>
                </div>
                <hr />
                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                    <div class="row justify-content-center">
                        <div class="col-xl-5 col-lg-3 col-md-3"></div>
                        <div class="col-xl-2 col-lg-6 col-md-6">
                            <div class="card o-hidden border-0 shadow-lg my-5">
                                <div class="card-body p-0">
                                    <!-- Nested Row within Card Body -->
                                    <br />
                                    <div>
                                        <center>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        </center>

                                    </div>
                                    <div class="p-5">
                                        <form class="user">
                                            <div class="text-center">
                                                <h3 class="text-gray-900 mb-4">Chúc bạn một ngày tốt lành :)</h3>
                                            </div>
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control form-control-user", @placeholder = "Nhập tên đăng nhập" } })
                                            </div>
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @type = "password", @class = "form-control form-control-user", @placeholder = "Nhập mật khẩu" } })
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input" id="customCheck">
                                                    <label class="custom-control-label text-gray-900" for="customCheck">
                                                        Remember
                                                        Me
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                                            </div>
                                            <hr>
                                            <a href="#!" class="btn btn-google btn-user btn-block">
                                                <i class="bi bi-google"></i> Đăng nhập bằng google
                                            </a>
                                            <a href="#!" class="btn btn-facebook btn-user btn-block">
                                                <i class="bi bi-facebook"></i> Đăng nhập bằng facebook
                                            </a>
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <a class="small" href="#!">Bạn quên mật khẩu?</a>
                                        </div>
                                        <div class="text-center">
                                            @Html.ActionLink(" Tạo một tài khoản mới!", "Registration", "Home", new { @class = "small" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-5 col-lg-3 col-md-3"></div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
